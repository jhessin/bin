#!/usr/bin/env python3

import os.path
import sys
import subprocess

f_path, f_name = os.path.split(sys.argv[0])


def usage():
    print(f"{f_name} <script-name>")
    exit(1)


if len(sys.argv) < 2:
    usage()

path = sys.argv[1]

if os.path.isfile(path):
    subprocess.run(['nvim', path])
else:
    template = "#!/usr/bin/env python3"
    file = open(path, "w")
    file.write(template)
    file.close()
    subprocess.run(["chmod", "a+x", path])
    subprocess.run(["nvim", path])
