#!/usr/bin/env zsh
autoload colors; colors

function traverse() {
  for dir in $1/*
  do
    if [ -d "${dir}" ] ; then
      echo "reseting ${fg[green]}$dir$reset_color"
      cd "$dir"
      git reset --hard
      git clean -f
    fi
  done
}

cd ~/.local/bin
echo "reseting ${fg[green]}~/.local/bin$reset_color"
git reset --hard
git clean -f

cd ~
echo "reseting ${fg[green]}$HOME$reset_color"
git reset --hard
git clean -f

cd ~/.config
echo "reseting ${fg[green]}~/.config$reset_color"
git reset --hard
git clean -f
~/.config/nvim/install.sh

echo "reseting ${fg[green]}Github repos$reset_color"
traverse ~/Projects

cleanundo
